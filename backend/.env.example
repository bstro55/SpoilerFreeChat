PORT=3001
CORS_ORIGIN=http://localhost:5173
NODE_ENV=development

# Supabase PostgreSQL connection strings
# Get these from: Supabase Dashboard > Project Settings > Database > Connection string (URI)
#
# DATABASE_URL: Transaction pooler for runtime (port 6543)
# - Used by the app at runtime for queries
# - Requires ?pgbouncer=true to disable prepared statements
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# DIRECT_URL: Session mode for migrations (port 5432)
# - Used by Prisma for migrations only
# - Same pooler host, but port 5432 (session mode)
# - No pgbouncer flag needed
DIRECT_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# Supabase project URL (for JWT verification)
SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"

# Sentry error tracking (optional - get DSN from sentry.io)
SENTRY_DSN=
